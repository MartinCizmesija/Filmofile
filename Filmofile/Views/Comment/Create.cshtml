@model Filmofile.Models.Comment

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center">Comment @ViewBag.MovieName</h1>

<hr />
<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MovieId" />
            <div class="form-group">
                <label asp-for="UserId" class="control-label">User name</label>
                <select asp-for="UserId" class="form-control" asp-items="ViewBag.Username"></select>
            </div>
            <div class="form-group">
                <label asp-for="Text" class="control-label"></label>
                <input asp-for="Text" class="form-control" />
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add comment" class="btn btn-success btn-block" />
            </div>
        </form>
    </div>
</div>


<a class="btn btn-primary" asp-action="Index" asp-controller="Movie" as>Back to List</a>
<a class="btn btn-primary" asp-action="Details" asp-controller="Movie" asp-route-id="@Model.MovieId">Back to details</a>
